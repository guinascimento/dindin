#content
  #profile_container
    #left
      =link_to "Back", "/#{params[:month]}/invoices/list"
      %br
      %br
      #profile_info
        -form_for :invoice, :url => { :action => "update", :id => @invoice }, :html => { :method => "put" } do |f|
          #signup_box
            %fieldset
              .group
                %div{:class => "field separated"}
                  %label{:for => "invoice_name"}
                    Name
                  =f.text_field :name
                %div{:class => "field separated"}
                  = f.submit 'Create'
